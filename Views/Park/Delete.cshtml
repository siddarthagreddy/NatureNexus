@model NatureNexus.Models.Park

<div class="container">
    <div class="row">
        <div class="col s12">
            <p class="text-danger">@ViewData["ErrorMessage"]</p>
        </div>
        <div class="col s12">
            <div class="card-panel center-align">
                <span class="red-text text-darken-2" style="font-size:x-large;">Are you sure you want to delete this park?</span>
            </div>
        </div>

        <form method="post" asp-controller="Park" asp-action="DeleteConfirmed">
            <input type="hidden" asp-for="ID"/>
            <div class="input-field col s12 center-align">
                <button class="btn waves-effect waves-green red" type="submit" name="action"><b>Confirm</b></button>
            </div>
        </form>


        <div class="col s12">
            <div class="card">
                <div class="card-content">
                    <div class="row">
                        <div class="col s2"><b>Park Code</b></div>
                        <div class="col s10">@Html.DisplayFor(model => model.parkCode)</div>
                    </div>
                    <div class="row">
                        <div class="col s2"><b>Park Name</b></div>
                        <div class="col s10">@Html.DisplayFor(model => model.fullName)</div>
                    </div>
                    <div class="row">
                        <div class="col s2"><b>Description</b></div>
                        <div class="col s10"><blockquote>@Html.DisplayFor(model => model.description)</blockquote></div>
                    </div>
                    <div class="row">
                        <div class="col s2"><b>State</b></div>
                        <div class="col s10">
                            @foreach (var item in Model.states)
                            {
                                <div class="chip">
                                    @Html.DisplayFor(modelItem => item.state.name)
                                </div>
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s2"><b>Activities</b></div>
                        <div class="col s10">
                            @foreach (var item in Model.activities)
                            {
                                <div class="chip">
                                    @Html.DisplayFor(modelItem => item.activity.name)
                                </div>
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s2"><b>Topics</b></div>
                        <div class="col s10">
                            @foreach (var item in Model.topics)
                            {
                                <div class="chip">
                                    @Html.DisplayFor(modelItem => item.topic.name)
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-action">
                    <a href="@Model.url">Visit</a>
                </div>
            </div>
        </div>

    </div>
</div>
